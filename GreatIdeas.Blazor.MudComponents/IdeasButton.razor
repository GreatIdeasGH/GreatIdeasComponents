
 <MudTooltip Text="@TooltipText">
<MudHidden Breakpoint="Breakpoint.SmAndUp" Invert="true">
        <MudButton StartIcon="@Icon"
                   Variant="@Variant"
                   Color="@Color"
                   OnClick=@OnClick>
            @Caption
        </MudButton>
    </MudHidden>
</MudTooltip>
 
 <MudTooltip Text="@TooltipText">
     <MudHidden Breakpoint="Breakpoint.SmAndDown" Invert="true">
         <MudIconButton Icon="@Icon"
                        Color="@Color"
                        Variant="@Variant"
                        Size="Size.Medium"
                        Class="ma-2 pl-2 pr-2"
                        OnClick="@OnClick">
             @Caption
         </MudIconButton>
     </MudHidden>
 </MudTooltip>
 
